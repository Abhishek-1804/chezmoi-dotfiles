{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

set -e

echo "ğŸ“¦ Installing packages declaratively with brew bundle..."
echo "âš ï¸  Packages not in the list will be uninstalled (--cleanup)"

brew bundle --cleanup --file=/dev/stdin <<EOF
{{ range .packages.darwin.taps -}}
tap {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.mas -}}
mas {{ .name | quote }}, id: {{ .id }}
{{ end -}}
EOF

echo "âœ… Package installation complete!"
{{ end -}}
